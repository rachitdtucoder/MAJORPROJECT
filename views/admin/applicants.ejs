<% layout("layouts/boilerplate") %>
<body>
    <div class="container mt-5">
        <h2>Applicants for "<%= bookings[0].listing.title %>"</h2>

        <!-- Applicants Table -->
        <div class="table-responsive mt-4">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% bookings.forEach((booking, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= booking.applicant.username %></td>
                            <td><%= booking.applicant.email %></td>
                            <td>
                                <!-- Accept/Reject Buttons -->
                                <form action="/listings/bookings/<%= booking._id %>/status" method="POST" style="display:inline;">
                                    <button name="status" value="accepted" class="btn btn-success btn-sm">Accept</button>
                                    <button name="status" value="rejected" class="btn btn-danger btn-sm">Reject</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <!-- Back to Admin Dashboard -->
        <a href="/listings/admin" class="btn btn-secondary mt-3">Back to Dashboard</a>
    </div>
</body>

